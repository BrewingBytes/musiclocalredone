{
  "name": "music-local-server",
  "version": "0.0.1",
  "scripts": {
    "build": "npx tsc && yarn build-rust",
    "build-rust": "cd utils/rust-player && cargo build && mv target/debug/rust-player ../../dist/rust-player",
    "start": "node dist/server/index.js",
    "dev": "concurrently \"yarn build-rust && npx tsc --watch\" \"nodemon -q dist/index.js\"",
    "lint": "eslint . --fix --ext .ts",
    "prettier": "prettier --config .prettierrc '**/*.ts' --write",
    "commit": "yarn lint && yarn prettier",
    "lint-ci": "eslint . --max-warnings=0 --ext .ts",
    "prettier-ci": "prettier --config .prettierrc '**/*.ts' --check"
  },
  "license": "LGPL-3.0-or-later",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "fluent-ffmpeg": "^2.1.2",
    "loudness": "^0.4.2",
    "youtube-node": "^1.3.3",
    "ytdl-core": "^4.11.5"
  },
  "devDependencies": {
    "@types/audio-play": "^2.3.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/fluent-ffmpeg": "^2.1.24",
    "@types/play-sound": "^1.1.2",
    "@types/sound-play": "^1.1.3",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.54.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.1.0",
    "typescript": "^5.3.2"
  }
}
